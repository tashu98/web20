extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h1.mb-4 Create Race
                form(action="/races", method="post")
                    .form-group
                        label(for="name") Name:
                        input.form-control(type="text", id="name", name="name")
                    .form-group
                        label(for="date") Date:
                        input.form-control(type="date", id="date", name="date")
                    .form-group
                        label(for="location") Location:
                        input.form-control(type="text", id="location", name="location")
                    .form-group
                        label(for="distance") Distance (in kilometers):
                        input.form-control(type="number", id="distance", name="distance")
                    .form-group
                        label(for="teams") Select Teams:
                        select.form-control(id="teams", name="teams" multiple)
                            each team in teams
                                option(value=team._id)= team.name
                    button.btn.btn-primary(type="submit") Create
