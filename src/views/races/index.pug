extends ../layout

block content
    .container
        .row.justify-content-between.align-items-center.mb-4
            if isAdmin
                .col-md-6
                    h1 Sponsors Dashboard
                .col-md-6.d-flex.justify-content-end
                    a.btn.btn-primary(href="/sponsors/new") Create Sponsor
            else
                .col-md-12
                    h1 Sponsors Dashboard

        table.table.table-striped
            thead
                tr
                    th Name
                    th Date
                    th Location
                    th Distance
                    th Teams
                    th Actions
            tbody
                each race in races
                    tr
                        td= race.name
                        td= race.date.toLocaleDateString()
                        td= race.location
                        td= race.distance
                        td
                            if race.teams.length > 0
                                ul
                                    each team in race.teams
                                        li= team.name
                            else
                                span No teams
                        td
                            .btn-group
                                a.btn.btn-info(href=`/races/${race._id}`) View
                                if isAdmin
                                    a.btn.btn-warning(href=`/races/${race._id}/edit`) Edit
                                    form(action=`/races/${race._id}/delete`, method="post")
                                        button.btn.btn-danger(type="submit") Delete
