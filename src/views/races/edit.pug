extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h1.mb-4 Edit Race
                form(action=`/races/details/${race._id}/edit`, method="post")
                    .form-group
                        label(for="name") Name:
                        input.form-control(type="text", id="name", name="name", value=race.name)
                    .form-group
                        label(for="date") Date:
                        input.form-control(type="date", id="date", name="date", value=race.date.toISOString().substr(0, 10))
                    .form-group
                        label(for="location") Location:
                        input.form-control(type="text", id="location", name="location", value=race.location)
                    .form-group
                        label(for="distance") Distance:
                        input.form-control(type="number", id="distance", name="distance", value=race.distance)
                    .form-group
                        label(for="teams") Select Teams:
                        select.form-control(id="teams", name="teams" multiple)
                            each team in teams
                                if race.teams.includes(team._id)
                                    option(value=team._id, selected)= team.name
                                else
                                    option(value=team._id)= team.name
                    button.btn.btn-primary(type="submit") Update
