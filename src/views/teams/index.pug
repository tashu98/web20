extends ../layout

block content
    .container
        .row.justify-content-between.align-items-center.mb-4
            if isAdmin
                .col-md-6
                    h1 Teams Dashboard
                .col-md-6.d-flex.justify-content-end
                    a.btn.btn-primary(href="/teams/new") Create Team
            else
                .col-md-12
                    h1 Teams Dashboard
        table.table.table-striped
            thead
                tr
                    th Name
                    th Country
                    th Actions
            tbody
                each team in teams
                    tr
                        td= team.name
                        td= team.country
                        td
                            .btn-group
                                a.btn.btn-info(href=`/teams/details/${team._id}`) View
                                if isAdmin
                                    a.btn.btn-warning(href=`/teams/details/${team._id}/edit`) Edit
                                    form(action=`/teams/details/${team._id}/delete`, method="post")
                                        button.btn.btn-danger(type="submit") Delete
