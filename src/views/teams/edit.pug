extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h1.mb-4 Edit Team
                form(action=`/teams/details/${team._id}/edit`, method="post")
                    .form-group
                        label(for="name") Name:
                        input.form-control(type="text", id="name", name="name", value=team.name)
                    .form-group
                        label(for="country") Country:
                        input.form-control(type="text", id="country", name="country", value=team.country)
                    button.btn.btn-primary(type="submit") Update
