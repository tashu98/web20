extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h1.mb-4 Driver Details
                ul.list-group
                    li.list-group-item
                        strong Name:
                        span.ml-2= driver.name
                    li.list-group-item
                        strong Age:
                        span.ml-2= driver.age
                    li.list-group-item
                        strong Nationality:
                        span.ml-2= driver.nationality
                    li.list-group-item
                        strong Team:
                        span.ml-2= driver.team ? driver.team.name : 'No Team'
                if isAdmin
                    a.btn.btn-primary(href=`/drivers/${driver._id}/edit`) Edit
