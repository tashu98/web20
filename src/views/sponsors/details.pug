extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h1.mb-4 Sponsor Details
                ul.list-group
                    li.list-group-item
                        strong Name:
                        span.ml-2= sponsor.name
                    li.list-group-item
                        strong Industry:
                        span.ml-2= sponsor.industry
                if isAdmin
                    a.btn.btn-primary(href=`/sponsors/${sponsor._id}/edit`) Edit
                    form(action=`/sponsors/${sponsor._id}/delete`, method="post")
                        button.btn.btn-danger(type="submit") Delete
