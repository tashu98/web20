extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6
                h1.mb-4 Edit Sponsor
                form(action=`/sponsors/details/${sponsor._id}/edit`, method="post")
                    .form-group
                        label(for="name") Name:
                        input.form-control(type="text", id="name", name="name", value=sponsor.name)
                    .form-group
                        label(for="industry") Industry:
                        input.form-control(type="text", id="industry", name="industry", value=sponsor.industry)
                    button.btn.btn-primary(type="submit") Update
